%h2.title.is-3 Perfil
%hr

= form_tag "/sign_up_validation", method: :post do
  %ul.form-errors
    - @user.errors.full_messages.each do |error|
      %li.error= error

  .field
    %label{ for: "user_username", class: "label" } Nombre de usuario
    .control
      = text_field_tag "user[username]", @user.username, class: "input"

  .field
    %label{ for: "user_email", class: "label" } Correo electronico
    .control
      = email_field_tag "user[email]", @user.email, required: true, class: "input"

  .field
    %label{ for: "user_name", class: "label" } Nombre
    .control
      = text_field_tag "user[name]", @user.name, class: "input"

  .actions.has-text-right
    = submit_tag "Completar registro", class: "button is-primary"
